#header
  position: relative
  background: #fff

#header-outer
  height: 100%
  position: relative
  border-bottom: 1px solid #222
  padding: 2em 0

#header-inner
  position: relative
  overflow: hidden

#header-title
  float:left

#logo-wrap
  margin-top:8px

$logo-text
  text-decoration: none
  color: color-link

#logo
  text-decoration: none
  letter-spacing: 2px
  font-size: 240%
  font-weight: bold
  padding-bottom: 0.2em
  letter-spacing: 0.2em
  margin: 10px 0 30px
  color: #222
  font-family: font-mono

#subtitle
  @extend $logo-text
  font-size: subtitle-size
  line-height: subtitle-size
  letter-spacing: 1px

#subtitle-wrap
  margin-top: subtitle-size

#main-nav
  float: right
  margin-right: 40px
  margin-top: 27px;

$nav-link
  float: left
  color: color-link
  opacity: 0.6
  text-decoration: none
  transition: opacity 0.2s
  display: block
  padding: 20px 15px
  &:hover
    opacity: 1

.nav-icon
  color: #222
  font-family: font-icon
  text-align: center
  font-size: font-size
  width: font-size
  height: font-size
  padding: 20px 15px
  position: relative
  cursor: pointer

.main-nav-link
  color: #222
  text-decoration: none
  font-weight: bold
  margin-right: 32px;

#main-nav-toggle
  display: none
  &:before
    content: "\f0c9"
  @media mq-mobile
    display: block

#sub-nav
  float: right
  margin-right: -15px
  margin-top: 27px

#nav-rss-link
  &:before
    content: "\f09e"

#nav-search-btn
  &:before
    content: "\f002"

#search-form-wrap
  position: absolute
  top: 15px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 0
  @media mq-mobile
    width: 100%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 3px
  border: 1px solid color-link

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777